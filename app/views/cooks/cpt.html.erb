<%= render('common/nav') %>
<section   id="container-fluid">
 <!--food menu start..-->
 <div class="text_info">
     <h3>CPT Food Menu Widget</h3>
   This page has been created using "CPT <span>"Food"</span> Menu widget which is having several options like
    thumbnail size, description on/off, thumbnal on/off etc, all options are shown in this page.
 </div>
<div  id="container" class="cpt">
    <% @categories.each_with_index do |category,x| %>
    <div class="one-third<%= '-last' if x % 3 == 2 %>">
        <h3><%= category.title %></h3>
        <ul class="foodmenu">
            <% @foods.each do |food| %>
                <% if food.category_id == category.id %>
                <li>
                    <img src="<%= food.images %>" class="thumb_img about_br img" alt=""/>
                    <div class="description">
                        <h4><%= food.title %></h4>
                        <span class="menu_item_price"> $<%= food.price %></span>
                        <div class="clear"></div>
                        <p><%= truncate(food.desctiprion,length: 50) %></p>
                    </div>
                </li>
                <% end %>
            <% end %>
        </ul>
    </div>
    <% end %>
</div>
</div>
</section>